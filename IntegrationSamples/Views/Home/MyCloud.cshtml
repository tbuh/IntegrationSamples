@model List<IntegrationSamples.Models.ChatUser>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "My Cloud";
}

<div class="container">
    @*<div class="leftpane pane-shadow">*@
    @*</div>*@
    <input type="hidden" id="AgentId" value="@ViewBag.Id" />
    <input type="hidden" id="AgentName" value="@ViewBag.Username" />

    <div class="middlepane pane-shadow">
        <p>General</p>
        <div class="grid-container-general">
            <div class="grid-item-general">
                <div id="chat-icon"></div>
            </div>
            <div class="grid-item-general">
                <a class="openpop" href="https://weather.com/">
                    <img src="~/Content/Images/Live support.PNG" />
                </a>
            </div>
            <div class="grid-item-general">
                <a class="openpop" href="https://www.google.com">
                    <img src="~/Content/Images/Supportb.PNG" />
                </a>
            </div>
            <div class="grid-item-general">
                <a class="openpop" href="https://www.google.com">
                    <div>
                        <img src="~/Content/Images/News.PNG" />
                    </div>
                </a>
            </div>

            <div class="grid-item-general">
                <a class="openpop" href="https://www.google.com">
                    <div>
                        <img src="~/Content/Images/Home delivery.PNG" />
                    </div>
                </a>
            </div>
            <div class="grid-item-weather">
                <a class="openpop" href="https://www.google.com">
                    <div>
                        <img src="~/Content/Images/Weather.PNG" />
                        <img src="~/Content/Images/Cell.PNG" />
                    </div>
                </a>
            </div>
            <div class="grid-item-iAmhungry">
                <a class="openpop" href="https://www.google.com">
                    <div>
                        <img style="width:120px" src="~/Content/Images/Iamhungry.PNG" />
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="rightpane pane-shadow">
        <div style="background:#5c5a5a;-webkit-text-fill-color:  white;">
            <div style="font-size:23px;margin-bottom:20px;">
                <label>High Scores</label>
            </div>

            <table>

                <tr>
                    <th>Place</th>
                    <th>Score</th>
                    <th>Name</th>
                </tr>
                @for (int i = 0; i < 5; i++)
                {
                    <tr>
                        <td>@(i + 1).</td>
                        @if (Model.Count > i)
                        {
                            <td>@Model[i].Score</td>
                            <td>@Model[i].Name</td>
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                        }
                    </tr>
                }
            </table>
        </div>
    </div>

    <div class="panel-group">
        <div id="chat"></div>
    </div>
</div>

<div class="wrapper">
    <div class="popup">
        <iframe src="https://www.youtube.com/embed/A6XUVjK9W4o" allowfullscreen>
            <p>Your browser does not support iframes.</p>
        </iframe>
        <a href="#" class="close">X</a>

    </div>
</div>

@section scripts {
    <!--Reference the SignalR library. -->
    <script src="~/scripts/jquery.signalR-2.1.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/ChatUI/chat-ui.js"></script>
    <link href="~/Scripts/ChatUI/chat-ui.css" rel="stylesheet" media="all" />
    <link rel="stylesheet" href="~/Scripts/ChatUI/chatApp.css" />
    <script type="text/javascript" src="~/Scripts/ChatUI/chatApp.js"></script>
    <script>
        $(document).ready(function () {
            $(".popup").hide();
            $(".openpop").click(function (e) {
                e.preventDefault();
                $("iframe").attr("src", $(this).attr('href'));
                $(".links").fadeOut('slow');
                $(".popup").fadeIn('slow');
            });

            $(".close").click(function () {
                $(this).parent().fadeOut("slow");
                $(".links").fadeIn("slow");
            });
        });
    </script>
}
